{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Tefnut",
      "type": "shell",
      "command": "uv run gunicorn --threads=2  -b 0.0.0.0:5001 main:app",
      "problemMatcher": []
    },
    {
      "label": "Test all",
      "type": "shell",
      "command": "uv run pytest --cov=tefnut tests/ --cov-report term-missing -v -W ignore::DeprecationWarning"
    },
    {
      "label": "Install all Requirements",
      "type": "shell",
      "command": "uv sync --extra dev"
    }
  ]
}
